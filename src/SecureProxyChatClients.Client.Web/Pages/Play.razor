    private void HandleToolEffect(GameEvent evt)
    {
        try
        {
            switch (evt.Type)
            {
                case "RollCheck" when evt.Data is not null:
                    int roll = evt.Data.Value.GetProperty("Roll").GetInt32();
                    int total = evt.Data.Value.GetProperty("Total").GetInt32();
                    int dc = evt.Data.Value.GetProperty("Difficulty").GetInt32();
                    bool success = evt.Data.Value.GetProperty("Success").GetBoolean();
                    bool crit = evt.Data.Value.TryGetProperty("CriticalSuccess", out var cs) && cs.GetBoolean();
                    bool critFail = evt.Data.Value.TryGetProperty("CriticalFailure", out var cf) && cf.GetBoolean();
                    activeDiceRoll = new DiceRollDisplay(roll, total, dc, success, crit, critFail);
                    _ = DismissDiceRollAfterDelay();
                    break;

                case "ModifyHealth" when evt.Data is not null:
                    int amount = evt.Data.Value.GetProperty("Amount").GetInt32();
                    playContainerClass = amount < 0 ? "shake-damage" : "glow-heal";
                    _ = ClearEffectAfterDelay();
                    break;

                case "GiveItem" when evt.Data is not null:
                    string itemName = evt.Data.Value.GetProperty("Name").GetString() ?? "Item";
                    string itemEmoji = evt.Data.Value.TryGetProperty("Emoji", out var em) ? em.GetString() ?? "üì¶" : "üì¶";
                    string itemDesc = evt.Data.Value.TryGetProperty("Description", out var desc) ? desc.GetString() ?? "" : "";
                    activeLootCard = new LootCardDisplay(itemName, itemEmoji, itemDesc);
                    _ = DismissLootAfterDelay();
                    break;
            }
            StateHasChanged();
        }
        catch { /* Non-critical visual effects */ }
    }

    private async Task DismissDiceRollAfterDelay()
    {
        await Task.Delay(3500);
        activeDiceRoll = null;
        await InvokeAsync(StateHasChanged);
    }

    private async Task DismissLootAfterDelay()
    {
        await Task.Delay(3000);
        activeLootCard = null;
        await InvokeAsync(StateHasChanged);
    }

    private async Task ClearEffectAfterDelay()
    {
        await Task.Delay(600);
        playContainerClass = "";
        await InvokeAsync(StateHasChanged);
    }

