    {
        public string ResultText => Crit ? "CRITICAL HIT!" : CritFail ? "CRITICAL FAIL!" : Success ? "SUCCESS" : "FAILURE";
        public string ResultClass => Crit ? "crit-success" : CritFail ? "crit-fail" : Success ? "roll-success" : "roll-failure";
    }

