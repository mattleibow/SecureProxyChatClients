    private static int GetInt(JsonElement data, string name)
    {
        if (data.TryGetProperty(name, out var val)) return val.GetInt32();
        // Try camelCase
        string camel = char.ToLowerInvariant(name[0]) + name[1..];
        if (data.TryGetProperty(camel, out val)) return val.GetInt32();
        throw new KeyNotFoundException(name);
    }

    private static bool GetBool(JsonElement data, string name)
    {
        if (data.TryGetProperty(name, out var val)) return val.GetBoolean();
        string camel = char.ToLowerInvariant(name[0]) + name[1..];
        if (data.TryGetProperty(camel, out val)) return val.GetBoolean();
        return false;
    }

    private static string? GetStr(JsonElement data, string name)
    {
        if (data.TryGetProperty(name, out var val)) return val.GetString();
        string camel = char.ToLowerInvariant(name[0]) + name[1..];
        if (data.TryGetProperty(camel, out val)) return val.GetString();
        return null;
    }

    private static string FormatDiceRoll(JsonElement data)
    {
        int roll = GetInt(data, "Roll");
        int total = GetInt(data, "Total");
        int dc = GetInt(data, "Difficulty");
        bool success = GetBool(data, "Success");
        bool crit = GetBool(data, "CriticalSuccess");
        bool critFail = GetBool(data, "CriticalFailure");

        string result = crit ? "CRITICAL SUCCESS!" : critFail ? "CRITICAL FAILURE!" : success ? "Success" : "Failure";
        return $"ğŸ² d20={roll} +{GetInt(data, "Modifier")} = {total} vs DC {dc} â†’ {result}";
    }

    private static string FormatHealthChange(JsonElement data)
    {
        int amount = GetInt(data, "Amount");
        string source = GetStr(data, "Source") ?? "unknown";
        return amount >= 0 ? $"ğŸ’š +{amount} HP ({source})" : $"ğŸ’” {amount} HP ({source})";
    }

    private static string FormatGoldChange(JsonElement data)
    {
        int amount = GetInt(data, "Amount");
        return amount >= 0 ? $"ğŸ’° +{amount} gold" : $"ğŸ’° {amount} gold";
    }

