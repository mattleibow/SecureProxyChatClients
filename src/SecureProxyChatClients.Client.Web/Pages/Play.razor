    private void HandleToolEffect(GameEvent evt)
    {
        try
        {
            switch (evt.Type)
            {
                case "RollCheck" when evt.Data is not null:
                    int roll = GetInt(evt.Data.Value, "Roll");
                    int total = GetInt(evt.Data.Value, "Total");
                    int dc = GetInt(evt.Data.Value, "Difficulty");
                    bool success = GetBool(evt.Data.Value, "Success");
                    bool crit = GetBool(evt.Data.Value, "CriticalSuccess");
                    bool critFail = GetBool(evt.Data.Value, "CriticalFailure");
                    activeDiceRoll = new DiceRollDisplay(roll, total, dc, success, crit, critFail);
                    _ = DismissDiceRollAfterDelay();
                    break;

                case "ModifyHealth" when evt.Data is not null:
                    int amount = GetInt(evt.Data.Value, "Amount");
                    playContainerClass = amount < 0 ? "shake-damage" : "glow-heal";
                    _ = ClearEffectAfterDelay();
                    break;

                case "GiveItem" when evt.Data is not null:
                    string itemName = GetStr(evt.Data.Value, "Name") ?? "Item";
                    string itemEmoji = GetStr(evt.Data.Value, "Emoji") ?? "ğŸ“¦";
                    string itemDesc = GetStr(evt.Data.Value, "Description") ?? "";
                    activeLootCard = new LootCardDisplay(itemName, itemEmoji, itemDesc);
                    _ = DismissLootAfterDelay();
                    break;
            }
            StateHasChanged();
        }
        catch { /* Non-critical visual effects */ }
    }

    private async Task DismissDiceRollAfterDelay()
    {
        await Task.Delay(3500);
        activeDiceRoll = null;
        await InvokeAsync(StateHasChanged);
    }

    private async Task DismissLootAfterDelay()
    {
        await Task.Delay(3000);
        activeLootCard = null;
        await InvokeAsync(StateHasChanged);
    }

    private async Task ClearEffectAfterDelay()
    {
        await Task.Delay(600);
        playContainerClass = "";
        await InvokeAsync(StateHasChanged);
    }

